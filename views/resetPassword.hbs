<div class="loginBox">

    <img class="logo" src="images/cfbc_logo_small.png">
    <h1>Reset Password</h1>
    <p>Enter a new password.</p>
    <div class="loginForm">
        <form action="/confirmResetPassword?token={{reqToken}}&&id={{userId}}" method="POST"
            enctype="application/x-www-form-urlencoded">
            <div class="form-group">
                <input type="password" name="newPassword" class="form-control" id="newPassword"
                    placeholder="New password" id="newPassword">
                <div class="invalid-feedback" id="newPassword">
                    {{#if pageErrors.newPassword}}
                    <script>
                        $("#newPassword").addClass("is-invalid");
                    </script>
                    {{pageErrors.newPassword}}
                    {{/if}}</div>
            </div>
            <div class="form-group">
                <input type="password" name="confirmPassword" class="form-control" id="confirmPassword"
                    placeholder="Confirm new password" id="confirmPassword">
                <div class="invalid-feedback" id="confirmPassword">
                    {{#if pageErrors.confirmPassword}}
                    <script>
                        $("#confirmPassword").addClass("is-invalid");
                    </script>
                    {{pageErrors.confirmPassword}}
                    {{/if}}
                </div>
            </div>
            <button type="submit" class="btn btn-success btn-lg btn-block">Reset Password</button>
            <p><a href="../">Go to Home</a></p>
        </form>
    </div>
</div>