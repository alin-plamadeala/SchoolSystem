<script src="/js/pagination.min.js"></script>
<div id="list"></div>


<div class="form-row">
    <div class="col-sm-2">
        <small class=" text-uppercase text-muted">Courses</small>
        <p class=" h3 text-info">{{{courseList.length}}}</p>
    </div>
    <div class="col-sm my-auto pr-0 text-right">
        <button type="button" class="btn btn-outline-secondary" id="addCourseButton" onclick="newCourse()">
            <span><i class="fas fa-plus"></i></span>
            Add Course
        </button>
        <button type="button" class="btn btn-outline-secondary mr-1" id="removeFiltersButton" style="display: none;"
            onclick="removeFilters()">
            <span class="fa-layers fa-fw">
                <i class="fas fa-filter" data-fa-transform="left-2"></i>
                <i class="fas fa-times" data-fa-transform="shrink-8 down-3 right-5"></i>
            </span>
            Remove fiters
        </button>
    </div>
    <div class="col-sm-2 my-auto">
        <select class="form-control" id="selectTeacher">
            <option value="" selected>Any teacher</option>
        </select>
    </div>
    <div class="col-sm-2 my-auto">
        <select class="form-control" id="selectGroup">
            <option value="" selected>Any group</option>
        </select>
    </div>
    <div class="col-sm-3 my-auto pl-0">
        <form action="javascript:;" onsubmit="search()" id="search-form">
            <div class="input-group my-auto">
                <input type="search" class="form-control" placeholder="Search..." aria-label="Recipient's course"
                    aria-label="Search" id="search-input">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2"><i
                            class="fas fa-search"></i></button>
                </div>
            </div>
        </form>
    </div>
</div>



<div id="alert">

</div>

<div class="table-responsive">
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Teacher</th>
                <th scope="col"></th>

            </tr>
        </thead>
        <tbody id="tbody">

        </tbody>
    </table>
</div>
<div id="pagination"></div>
