<script src="./js/editProfile.js"></script>
<form action="/myprofile" method="POST" onsubmit="return validateForm()">
    {{#if message}}
    <div class="alert alert-success" role="alert">
        {{{message}}}
    </div>
    {{/if}}
    <div class="form-group row">
        <label for="staticFirstName" class="col-sm-2 col-form-label">First Name</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control " id="staticFirstName" value="{{user.firstName}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="staticLastName" class="col-sm-2 col-form-label">Last Name</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control" id="staticLastName" value="{{user.lastName}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="text" readonly autocomplete="email" name="email" class="form-control" id="email"
                value="{{user.email}}" readonly>

            <div class="invalid-feedback" id="emailFb">
                {{#if pageErrors.email}}
                <script>
                    $("#email").addClass("is-invalid");
                </script>
                {{pageErrors.email}}
                {{/if}}
            </div>


        </div>
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <div class="form-check">
                <input class="form-check-input" name="changeEmail" type="checkbox" id="changeEmail">
                <label class="form-check-label" for="changeEmail">
                    Change Email
                </label>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label for="currentPassword" class="col-sm-2 col-form-label">Current
            password</label>
        <div class="col-sm-10">
            <input type="password" autocomplete="new-password" name="currentPassword" class="form-control"
                id="currentPassword" value="">

            <div class="invalid-feedback" id="currentPasswordFb">
                {{#if pageErrors.currentPassword}}
                <script>
                    $("#currentPassword").addClass("is-invalid");
                </script>
                {{pageErrors.currentPassword}}
                {{/if}}

            </div>
        </div>
    </div>
    <div class="form-group row">
        <label for="newPassword" autocomplete="new-password" class="col-sm-2 col-form-label">New password</label>
        <div class="col-sm-10">
            <input type="password" name="newPassword" class="form-control" id="newPassword" value="">
            <div class="invalid-feedback" id="newPasswordFb">
                {{#if pageErrors.newPassword}}
                <script>
                    $("#newPassword").addClass("is-invalid");
                </script>
                {{pageErrors.newPassword}}
                {{/if}}
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label for="confirmPassword" autocomplete="new-password" class="col-sm-2 col-form-label">Confirm
            password</label>
        <div class="col-sm-10">
            <input type="password" name="confirmPassword" class="form-control" id="confirmPassword" value="">
            <div class="invalid-feedback" id="confirmPasswordFb">
                {{#if pageErrors.confirmPassword}}
                <script>
                    $("#confirmPassword").addClass("is-invalid");
                </script>
                {{pageErrors.confirmPassword}}
                {{/if}}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col text-center">
            <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
    </div>

</form>